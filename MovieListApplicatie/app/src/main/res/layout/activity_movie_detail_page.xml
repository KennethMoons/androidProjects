<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_detail_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kenneth.movielistapplicatie.MovieDetailPage"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/movieDetail_image"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/movieDetail_titel"
        android:layout_below="@+id/movieDetail_image"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/movieDetail_overview"
        android:layout_below="@+id/movieDetail_titel"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/movieDetail_taal"
        android:layout_below="@+id/movieDetail_overview"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/movieDetail_releaseDate"
        android:layout_below="@+id/movieDetail_taal"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>
