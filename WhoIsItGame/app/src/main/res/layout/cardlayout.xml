<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/card_view_landscape"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imagePersoon_landscape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/namePersoon_landscape"
                android:layout_toRightOf="@+id/imagePersoon_landscape"
                android:text="Naam : "
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/geslachtPersoon_landscape"
                android:layout_below="@+id/namePersoon_landscape"
                android:layout_toRightOf="@+id/imagePersoon_landscape"
                android:text="geslacht : "
                android:layout_marginLeft="30dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>