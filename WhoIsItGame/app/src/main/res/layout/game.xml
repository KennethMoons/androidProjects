<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.kenneth.whoisitgame.Game"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:id="@+id/myLinear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toolbar"
        >
        <ImageView
            android:id="@+id/landscape_myFigureImage"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/landscape_myfiguretxt"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:text="dit is landscape"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/myLinear"
        android:id="@+id/viewTussen"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reclycer_view"
        android:layout_below="@+id/viewTussen"
        android:layout_marginTop="15dp"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
